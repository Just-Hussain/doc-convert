{
  "kind": "collectionType",
  "collectionName": "documents",
  "info": {
    "singularName": "document",
    "pluralName": "documents",
    "displayName": "Document"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "originalFile": {
      "allowedTypes": [
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "pdfFile": {
      "allowedTypes": [
        "files"
      ],
      "type": "media",
      "multiple": false
    },
    "originalExt": {
      "type": "enumeration",
      "enum": [
        ".txt",
        ".rtf",
        ".fodt",
        ".doc",
        ".docx",
        ".odt",
        ".xls",
        ".xlsx",
        ".ods",
        ".ppt",
        ".pptx",
        ".odp"
      ],
      "required": true
    },
    "duration": {
      "type": "decimal"
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "documents"
    }
  }
}
